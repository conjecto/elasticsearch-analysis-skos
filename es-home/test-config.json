{
  "settings": {
    "index": {
      "analysis": {
        "filter": {
          "french_elision": {
            "type":         "elision",
            "articles_case": true,
            "articles": [
              "l", "m", "t", "qu", "n", "s",
              "j", "d", "c", "jusqu", "quoiqu",
              "lorsqu", "puisqu"
            ]
          },
          "french_stop": {
            "type":       "stop",
            "stopwords":  "_french_"
          },
          "french_stemmer": {
            "type":       "stemmer",
            "language":   "light_french"
          },
          "skosfilter" : {
            "type": "skos",
            "indexName" : "ukat",
            "skosFile": "es-home\\skos.n3",
            "expansionType": "LABEL"
          }
        },
        "analyzer": {
          "french": {
            "tokenizer":  "standard",
            "filter": [
              "french_elision",
              "lowercase",
              "french_stop",
              "french_stemmer",
              "skosfilter"
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "_default_": {
      "properties": {
        "subject": {
          "type": "string",
          "analyzer": "french"
        }
      }
    }
  }
}